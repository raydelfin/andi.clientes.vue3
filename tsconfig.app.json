{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* -------------------------------------------------------- */
    /* OPCIONES AGREGADAS PARA DESACTIVAR LA ESTRICTEZ */
    "strictNullChecks": false, // Ignora errores de 'possibly null' (TS18047)
    "noImplicitAny": false,    // Permite tipos 'any' impl√≠citos (m√°s como JS)
    "skipLibCheck": true,      // Ignora errores de librer√≠as como Ionic (string vs number)
    /* -------------------------------------------------------- */
    // üö® 1. AGREGAR ESTA L√çNEA CR√çTICA
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
